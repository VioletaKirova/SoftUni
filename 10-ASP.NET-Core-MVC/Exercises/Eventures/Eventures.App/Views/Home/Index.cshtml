
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!this.User.Identity.IsAuthenticated)
{
    <div class="jumbotron bg-eventures w-75 mx-auto">
        <h1>Eventures - The best ticket service in the World.</h1>
        <hr class="hr-2 bg-dark" />
        <h3 class="mt-4"><a href="/Identity/Account/Login">Login</a> to start "eventing".</h3>
        <h3 class="mt-4"><a href="/Identity/Account/Register">Register</a> if you don't have an account.</h3>
    </div>
}
else if (this.User.IsInRole("User"))
{
    <div class="jumbotron bg-eventures w-75 mx-auto">
        <h1 class="text-center">Welcome, @this.User.Identity.Name!</h1>
        <hr class="hr-2 bg-secondary mt-4" />
        <h3 class="mt-4 text-secondary text-center">Eventures wishes you an exciting experience.</h3>
    </div>
}
else if (this.User.IsInRole("Admin"))
{
    <div class="jumbotron bg-eventures w-75 mx-auto">
        <h1 class="text-center">Greetings, Administrator - @this.User.Identity.Name!</h1>
        <hr class="hr-2 bg-secondary mt-4" />
        <h3 class="mt-4 text-secondary text-center">Enjoy your work.</h3>
    </div>
}